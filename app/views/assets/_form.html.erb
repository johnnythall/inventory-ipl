<%= form_for @asset, :html => { :class => "form-horizontal asset" } do |f| %>

    <% if @asset.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@asset.errors.count, "error") %> prohibited this asset from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @asset.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :asset_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :asset_id, :class => 'form-control' %>
    </div>
    <%= error_span(@asset[:asset_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@asset[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
    <%= error_span(@asset[:description]) %>
  </div>
  <div class="control-group">
    <%= f.label :category_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :category_id, :class => 'form-control' %>
    </div>
    <%= error_span(@asset[:category_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :location_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :location_id, :class => 'form-control' %>
    </div>
    <%= error_span(@asset[:location_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :value, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :value, :class => 'form-control' %>
    </div>
    <%= error_span(@asset[:value]) %>
  </div>
  <div class="control-group">
    <%= f.label :available, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :available, :class => 'form-control' %>
    </div>
    <%= error_span(@asset[:available]) %>
  </div>
  <div class="control-group">
    <%= f.label :access_level, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :access_level, :class => 'form-control' %>
    </div>
    <%= error_span(@asset[:access_level]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            assets_path, :class => 'btn btn-default' %>

<% end %>
