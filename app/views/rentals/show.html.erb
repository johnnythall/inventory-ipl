<%- model_class = Rental -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @rental.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:list_of_assets) %>:</strong></dt>
  <dd><%= @rental.list_of_assets %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rented_by_id) %>:</strong></dt>
  <dd><%= @rental.rented_by_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_date) %>:</strong></dt>
  <dd><%= @rental.start_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:end_date) %>:</strong></dt>
  <dd><%= @rental.end_date %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              rentals_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_rental_path(@rental), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              rental_path(@rental),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
